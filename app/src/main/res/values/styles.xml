<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modified style to use dynamic theme color instead of hardcoded value -->
    <style name="ThemeColorSwitch" parent="Theme.AppCompat.Light">
        <!-- These values will be overridden at runtime by ThemeManager -->
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">?attr/colorAccent</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">30%</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>